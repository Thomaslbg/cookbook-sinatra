<form action="/new_recipe" method="POST" class="recipe_form">
  <div class="recipe_form">
    <label for="name">Name of the recipe: </label>
    <input type="text" name="name" id="name" required>
  </div>
  <div class="recipe_form">
    <label for="description">Description of the recipe: </label>
    <input type="description" name="description" id="description" required>
  </div>
  <div class="recipe_form">
    <label for="rating">rating: </label>
    <input type="rating" name="rating" id="rating" required>
  </div>
  <div class="recipe_form">
    <label for="prep_time">Preparation time: </label>
    <input type="prep_time" name="prep_time" id="prep_time" required>
  </div>

  <div class="recipe_form">
    <input type="submit" value="Add recipe">
  </div>
</form>


